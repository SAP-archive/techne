{% from "../icon/component.njk" import icon %}
{% macro alert(properties={}, modifier={}) -%}
<div class="tn-alert{{ modifier.block | modifier('alert') }}" role="alert" id="{{properties.id}}">
  <div class="tn-alert__action">
    <button class="tn-alert__close" aria-controls="{{properties.id}}">
      {{ icon('remove') }}
    </button>
  </div>
  {%- if properties.text %}
    {{ properties.text }}
  {%- endif %}
</div>

{%- endmacro %}
