{% extends "layout.njk" %}
{% from "./component.njk" import button %}
{% from "./../format.njk" import format %}
{% set css_deps = ['helpers','icons'] %}

{% block content %}
<h1>Action Bar Button</h1>
{% set example %}
{{  button(
        { label: 'BUTTON_LABEL', icon: 'checked' },
        modifier={ block: [] }
    )
}}
{{  button(
        { label: 'BUTTON_LABEL', icon: 'checked' },
        modifier={ block: ['text'] }
    )
}}
{% endset %}
{{ format(example) }}


<br>

<h2>States â€” Selected, Disabled</h2>
{% set example %}
{{  button(
        { label: 'BUTTON_LABEL', icon: 'checked' },
        modifier={ block: [] },
        aria={ selected: true }
    )
}}
{{  button(
        { label: 'BUTTON_LABEL', icon: 'checked' },
        modifier={ block: [] },
        aria={ disabled: true }
    )
}}
{{  button(
        { label: 'BUTTON_LABEL', icon: 'checked' },
        modifier={ block: ['text'] },
        aria={ selected: true }
    )
}}
{{  button(
        { label: 'BUTTON_LABEL', icon: 'checked' },
        modifier={ block: ['text'] },
        aria={ disabled: true }
    )
}}
{% endset %}
{{ format(example) }}

{% endblock %}
