{% extends "layout.njk" %}
{% from "./../format.njk" import format %}
{% from "../button/component.njk" import button %}
{% from "./component.njk" import tooltip %}
{% import "./../utils.njk" as utils %}

<!-- include add'tl css from src/styles/, e.g., ['helpers','components/button'] -->
{% set css_deps = ['components/button'] %}

{% block content %}

<h1>tooltip</h1>

<!-- output the component example and the code snippet -->
{% set example %}
{%- set _id = utils.id() %}
{{ button(
    { label: 'Default Tooltip' },
    modifier={ block: ["text"] },
    aria={ controls: _id, hastooltip: true, expanded: false, label: "More" }) | indent(4)
}}
{{  tooltip(
        properties={
            id: _id,
            content: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. <br> Nam id mauris venenatis, pharetra tortor nec, luctus dui."
        }
    )
}}
