<!--
tooltip:
    properties={},
    modifier={ block: [] },
    state={},
    aria={}
-->
{% macro tooltip(properties={}, modifier={}, state={}, aria={}) -%}
<div class="tn-tooltip {{ state | state }}"{{ aria | aria }} aria-position="{{ modifier.block }}">
    <div class="tn-tooltip__arrow">
    </div>
    <div class="tn-tooltip__content">
        {{ properties.content }}
    </div>
</div>
{%- endmacro %}
