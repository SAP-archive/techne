<!--
tooltip:
    properties={},
    modifier={ block: [] }
-->
{% macro tooltip(properties={}, modifier={}, state={}, aria={}) -%}
<div class="tn-tooltip"{{ aria | aria }}>
    {%- if modifier.block %}
    <div class="{{ modifier.block | modifier('tooltip__arrow') }}"></div>
    {%- endif %}
    <div class="tn-tooltip__content">
        {{ properties.content }}
    </div>
</div>
{%- endmacro %}
