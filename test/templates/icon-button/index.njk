{% set example %}
{{  icon_button(
        { icon: 'checked' },
        modifier={ block: [] },
        aria={ label: 'BUTTON_LABEL', selected: true }
    )
}}
{{  icon_button(
        { icon: 'checked' },
        modifier={ block: ['large'] },
        aria={ label: 'BUTTON_LABEL', selected: true }
    )
}}
{{  icon_button(
        { icon: 'checked' },
        modifier={ block: [] },
        aria={ label: 'BUTTON_LABEL', disabled: true }
    )
}}
{{  icon_button(
        { icon: 'checked' },
        modifier={ block: ['large'] },
        aria={ label: 'BUTTON_LABEL', disabled: true }
    )
}}
<br><br>
{{  icon_button(
        { icon: 'checked' },
        modifier={ block: ['text'] },
        aria={ label: 'BUTTON_LABEL', selected: true }
    )
}}
{{  icon_button(
        { icon: 'checked' },
        modifier={ block: ['text','large'] },
        aria={ label: 'BUTTON_LABEL', selected: true }
    )
}}
{{  icon_button(
        { icon: 'checked' },
        modifier={ block: ['text'] },
        aria={ label: 'BUTTON_LABEL', disabled: true }
    )
}}
{{  icon_button (
        { icon: 'checked' },
        modifier={ block: ['text','large'] },
        aria={ label: 'BUTTON_LABEL', disabled: true }
    )
}}
{% endset %}
{{ format(example) }}

<br><hr><br>

{% endblock %}
