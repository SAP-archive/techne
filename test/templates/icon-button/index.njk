{% extends "layout.njk" %}
{% from "./component.njk" import button %}
{% from "./../format.njk" import format %}
{% set css_deps = ['helpers','icons'] %}

{% block content %}
<h1>Button w/ Icon</h1>
{% set example %}
{{  button(
        {
            label: 'BUTTON_LABEL',
            icon: 'checked'
        },
        modifier={
            block: ['small']
        })
}}
{{  button(
        {
            label: 'BUTTON_LABEL',
            icon: 'checked'
        },
        modifier={
            block: []
        })
}}
{{  button(
        {
            label: 'BUTTON_LABEL',
            icon: 'checked'
        },
        modifier={
            block: ['large']
        })
}}
<br><br>
{{  button(
        {
            label: 'BUTTON_LABEL',
            icon: 'checked',
            after: false
        },
        modifier={
            block: ['text','small']
        })
}}
{{  button(
        {
            label: 'BUTTON_LABEL',
            icon: 'checked'
        },
        modifier={
            block: ['text']
        })
}}
{{  button(
        {
            label: 'BUTTON_LABEL',
            icon: 'checked'
        },
        modifier={
            block: ['text','large']
        })
}}
{% endset %}
{{ format(example) }}

<br>

<h2>States — Selected, Disabled</h2>

{% set example %}
{{  button(
        { label: 'BUTTON_LABEL', icon: 'checked' },
        modifier={ block: [] },
        aria={ selected: true }
    )
}}
{{  button(
        { label: 'BUTTON_LABEL', icon: 'checked' },
        modifier={ block: [] },
        aria={ disabled: true }
    )
}}
<br><br>
{{  button(
        { label: 'BUTTON_LABEL', icon: 'checked' },
        modifier={ block: ['text'] },
        aria={ selected: true }
    )
}}
{{  button(
        { label: 'BUTTON_LABEL', icon: 'checked' },
        modifier={ block: ['text'] },
        aria={ disabled: true }
    )
}}
{% endset %}
{{ format(example) }}




<br><hr><br>


<h1>Icon Button</h1>
{% set example %}
{{  button(
        { icon: 'checked' },
        modifier={ block: ['small','icon'] },
        aria={ label: 'BUTTON_LABEL' }
    )
}}
{{  button(
        { icon: 'checked' },
        modifier={ block: [] },
        aria={ label: 'BUTTON_LABEL' }
    )
}}
{{  button(
        { icon: 'checked' },
        modifier={ block: ['large'] },
        aria={ label: 'BUTTON_LABEL' }
    )
}}
<br><br>
{{  button(
        { icon: 'checked' },
        modifier={ block: ['text','small'] },
        aria={ label: 'BUTTON_LABEL' }
    )
}}
{{  button(
        { icon: 'checked' },
        modifier={ block: ['text'] },
        aria={ label: 'BUTTON_LABEL' }
    )
}}
{{  button(
        { icon: 'checked' },
        modifier={ block: ['text','large'] },
        aria={ label: 'BUTTON_LABEL' }
    )
}}
{% endset %}
{{ format(example) }}


<br>

<h2>States — Selected, Disabled</h2>
{% set example %}
{{  button(
        { icon: 'checked' },
        modifier={ block: [] },
        aria={ label: 'BUTTON_LABEL', selected: true }
    )
}}
{{  button(
        { icon: 'checked' },
        modifier={ block: ['large'] },
        aria={ label: 'BUTTON_LABEL', selected: true }
    )
}}
{{  button(
        { icon: 'checked' },
        modifier={ block: [] },
        aria={ label: 'BUTTON_LABEL', disabled: true }
    )
}}
{{  button(
        { icon: 'checked' },
        modifier={ block: ['large'] },
        aria={ label: 'BUTTON_LABEL', disabled: true }
    )
}}
<br><br>
{{  button(
        { icon: 'checked' },
        modifier={ block: ['text'] },
        aria={ label: 'BUTTON_LABEL', selected: true }
    )
}}
{{  button(
        { icon: 'checked' },
        modifier={ block: ['text','large'] },
        aria={ label: 'BUTTON_LABEL', selected: true }
    )
}}
{{  button(
        { icon: 'checked' },
        modifier={ block: ['text'] },
        aria={ label: 'BUTTON_LABEL', disabled: true }
    )
}}
{{  button(
        { icon: 'checked' },
        modifier={ block: ['text','large'] },
        aria={ label: 'BUTTON_LABEL', disabled: true }
    )
}}
{% endset %}
{{ format(example) }}

<br><hr><br>

{% endblock %}
