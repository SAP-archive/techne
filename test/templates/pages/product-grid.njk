{% extends "./layouts/module.njk" %}
{% set page_title = "Product Grid" %}
{% set page_intro = "Page level help message goes here" %}
{% set is_landing_page = true %}
{% set show_toolbar = true %}

{% import "../layout/component.njk" as layout %}

{% from "../label/component.njk" import label %}
{% from "../card/component.njk" import card %}
{% from "../card-group/component.njk" import card_group %}

{% set mediaCardItem = card({
        'title': 'Product Name',
        'description': '000123456789000 ',
        'price': '$110.00',
        'saleprice': '$100.00',
        'status': label({label: "Success"}, modifier={block: ["success"]}),
        'media': {
            'alt': 'YaaS product thumbnail',
            'image': 'https://techne.yaas.io/images/product-thumbnail-wide.png'
        }
    },
    modifier={
        block: ['vertical']
    },
    aria={
        role: 'button'
    })
%}

{% block page_content %}


{%- call layout.section() -%}
    {%- call layout.section_header() -%}
        {% call layout.section_actions() -%}
        <button class="tn-button tn-button--text tn-button--small">
            <span class="tn-icon tn-icon--add" role="presentation"></span>
            Add
        </button>
        {%- endcall %}
    {%- endcall %}
    {{  card_group(
          properties={
              items: [
                mediaCardItem,
                mediaCardItem,
                mediaCardItem,
                mediaCardItem,
                mediaCardItem,
                mediaCardItem,
                mediaCardItem,
                mediaCardItem,
                mediaCardItem,
                mediaCardItem,
                mediaCardItem,
                mediaCardItem
              ]
          },
          modifier={
              block: ['4col']
          }

      )
    }}
{%- endcall %}



{% endblock %}
