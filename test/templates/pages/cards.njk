{% set title = "Cards" %}
{% extends "./layouts/starter.njk" %}
{% import "./../utils.njk" as utils %}
{% from "./../format.njk" import format %}
{% from "../button/component.njk" import button %}
{% from "../card/component.njk" import card %}
{% from "../dropdown/component.njk" import dropdown, menu %}
{% from "../form/component.njk" import form_control %}
{% from "../input-group/component.njk" import input_group %}
{% from "../toolbar/component.njk" import toolbar %}
{% from "../label/component.njk" import label %}
{% from "../card/component.njk" import card %}
{% from "../card-group/component.njk" import card_group %}

{% block content %}

{# Toolbar  #}
{{  toolbar(data.toolbar.properties) }}

{# Add New Button #}
<div class="tn-container tn-has-text-align-right">
    <button class="tn-button tn-button--text tn-button--small">
        <span class="tn-icon tn-icon--addlg" role="presentation"></span>ADD
    </button>
</div>

{# Cards #}
<div class="tn-container">

  {% set mediaCardItem = card(
          {
              'title': 'user.name@email.com',
              'description': 'First name Last name',
              'status': label({label: "Inactive"}),
              'media': {
                  'alt': 'YaaS product thumbnail',
                  'image': 'https://techne.yaas.io/images/product-thumbnail-wide.png'
              }
          },
          modifier={
              media: ['round']
          },
          aria={
              role: 'button'
          })
   %}

  {{  card_group(
          properties={
              items: [
              mediaCardItem, mediaCardItem, mediaCardItem, mediaCardItem, mediaCardItem, mediaCardItem, mediaCardItem, mediaCardItem, mediaCardItem
              ]
          }
      )
  }}

</div>

{# Toolbar #}

{{  toolbar() }}

{% endblock %}
