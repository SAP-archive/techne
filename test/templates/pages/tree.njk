{% extends "./layouts/module.njk" %}
{% set page_title = "Tree" %}
{% set page_intro = "Page level help message goes here" %}
{% set is_landing_page = false %}
{% set show_toolbar = true %}

{% import "../layout/section.njk" as section %}
{% from "../layout/component.njk" import container, col %}
{% from "../tree/component.njk" import tree %}

{% block page_content %}

    {%- call section.block(modifier="full-bleed") -%}
        {%- call section.header() -%}
            {% call section.actions() -%}
            <button class="tn-button tn-button--text tn-button--small">
                <span class="tn-icon tn-icon--add" role="presentation"></span>
                Add
            </button>
            {%- endcall %}
        {%- endcall %}
        {{ tree(data.tree.properties) }}
    {%- endcall %}

{% endblock %}
