{% extends "layout.njk" %}
{% from "./component.njk" import button %}
{% from "./../format.njk" import format %}
{% set css_deps = ['helpers'] %}

{% block content %}
<h1>Button</h1>
{% set example %}
{{  button(
        {
            label: 'BUTTON_LABEL',
            icon: ''
        },
        modifier={
            block: ['small']
        })
}}
{{  button(
        {
            label: 'BUTTON_LABEL',
            icon: ''
        },
        modifier={
        })
}}
{{  button(
        {
            label: 'BUTTON_LABEL',
            icon: ''
        },
        modifier={
            block: ['large']
        })
}}
{% endset %}
{{ format(example) }}

