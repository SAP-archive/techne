
<!--
section:
    modifier=[],
    classes=[],
    aria={}
-->
{%- macro section(modifier=[], aria={}, classes=[]) %}
<section class="tn-section{{ classes | classes }}{{ modifier | modifier("section") }}"{{aria | aria}}>
    {{- caller() | indent -}}
</section>
{%- endmacro %}

{%- macro section_header(properties={}, modifier=[], aria={}, classes=[]) %}
<header class="tn-section__header{{ classes | classes }}{{ modifier | modifier("section__header") }}">
    {%- if properties.title %}
    <h1 class="tn-section__title">
        {{ properties.title }}
    </h1>
    {%- endif %}
    {{- caller() | indent -}}
</header>
{%- endmacro %}

{%- macro section_footer(properties={}, modifier=[], aria={}, classes=[]) %}
<footer class="tn-section__footer">
    {{ caller() }}
</footer>
{%- endmacro %}

{%- macro section_actions(properties={}, modifier=[], aria={}, classes=[]) %}
<div class="tn-section__actions">
    {{ caller() }}
</div>
{%- endmacro %}

